<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="MainActivity"
    tools:ignore="HardcodedText">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="0mm"
        android:layout_height="36dp"
        android:src="@drawable/arrow_back_24px"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Grid of Cards -->
            <LinearLayout
                android:id="@+id/tempLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:divider="@drawable/empty_tall_divider"
                android:orientation="vertical"
                android:paddingBottom="55dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/atmosphere_launcher_icon_round" />

                <TextView
                    android:id="@+id/titleCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="atmosphere"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="45sp" />

            </LinearLayout>

            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tempLayout"
                tools:ignore="MissingConstraints,NotSibling">

                <!-- Wind Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/material_dynamic_neutral70"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/windIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/location_on_24px"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/windSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Here"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:text="Use location\nservices"
                            android:textColor="@color/black"
                            android:textFontWeight="600" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/material_dynamic_neutral70"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/homeLocationIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/home_pin_24px"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/homeLocationText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Home"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:text="Set home location\nin settings"
                            android:textColor="@color/black"
                            android:textFontWeight="600" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Apparent Temp Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/material_dynamic_neutral70"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/apparentTempIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/language_24px"
                            app:tint="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Victoria, BC"
                            android:textColor="@color/black"
                            android:textFontWeight="600" />

                        <TextView
                            android:id="@+id/loc1Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22Â°"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Apparent Temp Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/material_dynamic_neutral70"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/loc2icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/language_24px"
                            app:tint="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Toronto, ON"
                            android:textColor="@color/black"
                            android:textFontWeight="600" />

                        <TextView
                            android:id="@+id/apparentTempValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20Â°"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/material_dynamic_neutral70"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/plusIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/add_24px"
                            app:tint="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Add new\nlocation"
                            android:textColor="@color/black"
                            android:textFontWeight="600" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/material_dynamic_neutral70"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/settingsIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/manage_accounts_24px"
                            app:tint="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Settings"
                            android:textColor="@color/black"
                            android:textFontWeight="600" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

            <TextView
                android:id="@+id/copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copyright Â©2025 Lorenzo Rogers and Michael Carpiano.\nAll rights reserved.\n\nWeather data provided by an open-source weather API,"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/gridLayout"
                tools:ignore="NotSibling"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingHorizontal="16dp"
                android:paddingTop="100dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/copyright2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/openmeteoLink"
                android:textColor="@color/blue"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/copyright"
                tools:ignore="NotSibling"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="center"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>


