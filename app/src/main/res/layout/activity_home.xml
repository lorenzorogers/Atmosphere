<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="MainActivity"
    tools:ignore="HardcodedText">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:src="@drawable/arrow_back_24px"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp" />

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Temperature and Icon -->
            <LinearLayout
                android:id="@+id/tempLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@drawable/empty_tall_divider"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/temperatureText"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:text="atmosphere"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="45sp"
                    android:textFontWeight="600" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/atmosphere_launcher_icon_round"/>

            </LinearLayout>

            <!-- City and Country -->

            <!-- Grid of Cards -->
            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="197dp"
                tools:ignore="MissingConstraints">

                <!-- Wind Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/lightteal"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/windIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/location_on_24px"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/windSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Here"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:text="requires location\nservices"
                            android:textColor="@color/black"
                            android:textFontWeight="600" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Humidity Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/lightteal"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/humidityIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/humidity_low_24px"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/humidityValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="42%"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Humidity"
                            android:textColor="@color/black"
                            android:textFontWeight="600" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Apparent Temp Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/lightteal"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/apparentTempIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/device_thermostat_24px"
                            app:tint="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Feels like"
                            android:textColor="@color/black"
                            android:textFontWeight="600" />

                        <TextView
                            android:id="@+id/apparentTempValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22Â°"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Visibility Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/lightteal"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/visibilityIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/landscape_24px"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/visibilityValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10.5 km"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Visibility"
                            android:textColor="@color/black"
                            android:textFontWeight="600" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/lightteal"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/precipValue"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/add_24px"
                            app:tint="@color/black"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </GridLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>


