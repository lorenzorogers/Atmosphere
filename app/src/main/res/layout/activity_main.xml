<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightsteelblue"
    tools:context="MainActivity"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:src="@drawable/arrow_back_24px"
        app:tint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp" />

    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:src="@drawable/atmosphere_launcher_icon_round"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintTop_toTopOf="@id/backButton"
        android:layout_marginStart="2dp" />

    <Button
        android:id="@+id/testButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fetch_tester"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Temperature and Icon -->
            <LinearLayout
                android:id="@+id/tempLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:divider="@drawable/empty_tall_divider"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/temperatureText"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text="@string/placeholder_temperature"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="66sp"
                    android:textFontWeight="600" />

                <ImageView
                    android:id="@+id/weatherIcon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/partly_cloudy_day_24px"
                    app:tint="@color/yellow" />
            </LinearLayout>

            <!-- City and Country -->
            <TextView
                android:id="@+id/City"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Victoria, BC (PDT)"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textFontWeight="600"
                android:fontFamily="@font/intervariable"
                app:layout_constraintTop_toBottomOf="@id/tempLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/Country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Canada"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textFontWeight="600"
                android:fontFamily="@font/intervariable"
                app:layout_constraintTop_toBottomOf="@id/City"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Grid of Cards -->
            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:padding="16dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/Country"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Wind Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/lightteal"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/windIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/air_24px"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/windSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14.1 km/h"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wind"
                            android:textFontWeight="600"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Humidity Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="@color/lightteal"
                    app:cardElevation="8dp"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/humidityIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/humidity_low_24px"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/humidityValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="42%"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Humidity"
                            android:textFontWeight="600"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Apparent Temp Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="@color/lightteal"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/apparentTempIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/device_thermostat_24px"
                            app:tint="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textFontWeight="600"
                            android:gravity="center"
                            android:text="Feels like"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/apparentTempValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22Â°"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Visibility Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="@color/lightteal"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/visibilityIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/landscape_24px"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/visibilityValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10.5 km"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Visibility"
                            android:textFontWeight="600"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:backgroundTint="@color/lightteal"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/uvIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/brightness_5_24px"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/uvIndexValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 (Moderate)"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UV Index"
                            android:textFontWeight="600"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="16dp"
                    android:backgroundTint="@color/lightteal"
                    app:cardElevation="8dp"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/precipIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/rainy_light_24px"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/precipValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.2 mm"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Precipitation"
                            android:textFontWeight="600"
                            android:textColor="@color/black" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </GridLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


