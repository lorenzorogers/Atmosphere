<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardItemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:backgroundTint="@color/atmosphere_purple_100"
    app:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/cardIcon"
            tools:srcCompat="@drawable/language_24px"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/language_24px"
            app:tint="@color/atmosphere_purple_950"
            />

        <TextView
            android:id="@+id/cardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cardIcon"
            android:layout_marginStart="12dp"
            android:text="Title"
            android:textColor="@color/atmosphere_purple_950"
            android:fontFamily="@font/intervariable"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cardSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardTitle"
            android:fontFamily="@font/intervariable"
            android:layout_toEndOf="@id/cardIcon"
            android:layout_marginStart="12dp"
            android:text="Subtitle"
            android:textColor="@color/atmosphere_purple_950"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/moreOptions"
            app:tint="@color/atmosphere_purple_950"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/more_vert_24px"
            android:contentDescription="More options" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
